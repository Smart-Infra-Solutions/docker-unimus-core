# Stage 1: Download Unimus Core binary
FROM alpine:latest AS downloader

# Set Unimus latest download url
ENV DOWNLOAD_URL=https://download.unimus.net/unimus-core/-%20Latest/Unimus-Core.jar

# Download Unimus Core JAR
RUN apk add --no-cache curl && \
    curl -L -o /tmp/unimus-core.jar $DOWNLOAD_URL

# Stage 2: Final runtime image
FROM azul/zulu-openjdk-alpine:25-latest

# Install runtime dependencies only
RUN apk update && \
    apk add --no-cache less tini tzdata procps && \
    rm -rf /var/cache/apk/*

# Copy Unimus Core binary from downloader stage
COPY --from=downloader /tmp/unimus-core.jar /opt/unimus-core.jar

# Copy start script
COPY files/start.sh /opt/start.sh

# Set script permissions
RUN chmod +x /opt/start.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD pgrep -f "unimus-core.jar" || exit 1

# Entrypoint
ENTRYPOINT ["/sbin/tini", "--"]
CMD ["/opt/start.sh"]
